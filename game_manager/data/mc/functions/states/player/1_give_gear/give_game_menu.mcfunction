item replace entity @p[team=Playing] hotbar.8 with written_book{display:{Name:'{"text":"Game Menu","color":"red","bold":true}'},gameMenu:1b,title:"Game Menu",author:"BlackeyeI",generation:0,pages:['[{"text":"Game Menu","bold":true},{"text":"\\nContents","bold":true},{"text":"\\n1) ","bold":false},{"text":"Items","color":"dark_blue","bold":false,"underlined":true,"clickEvent":{"action":"change_page","value":"2"}},{"text":"\\n2) ","bold":false},{"text":"Characters","color":"dark_blue","bold":false,"underlined":true,"clickEvent":{"action":"change_page","value":"8"}},{"text":"\\n3) ","bold":false},{"text":"Status Effects","color":"dark_blue","bold":false,"underlined":true,"clickEvent":{"action":"change_page","value":"12"}},{"text":"\\n4) ","bold":false},{"text":"Journal/Chest","color":"dark_blue","bold":false,"underlined":true,"clickEvent":{"action":"change_page","value":"16"}},{"text":"\\n5) ","bold":false},{"text":"Expeditions","color":"dark_blue","bold":false,"underlined":true,"clickEvent":{"action":"change_page","value":"17"}},{"text":"\\n6) ","bold":false},{"text":"Restart Scavenge","color":"dark_blue","bold":false,"underlined":true,"clickEvent":{"action":"change_page","value":"18"}},{"text":"\\n7) ","bold":false},{"text":"Exit To Lobby","color":"dark_blue","bold":false,"underlined":true,"clickEvent":{"action":"change_page","value":"19"}}]','[{"text":"1 Items ","bold":true,"italic":false},{"text":"\\nAmmo: ","bold":true},{"text":"good for refilling guns and trades.","bold":false},{"text":"\\nAxe: "},{"text":"melee weapon that alerts military and cauterizes wounds.","bold":false},{"text":"\\nBoy Scout Handbook: "},{"text":"gives advice, repairs tools, and kills mutant insects.","bold":false}]','[{"text":"Bug Spray: ","bold":true},{"text":"kills mutant insects and can forge a medkit.","bold":false},{"text":"\\nCards: ","bold":true},{"text":"increases sanity, alerts the military, supports gambling for supplies, and is valuable in trades.","bold":false},{"text":"\\nCheckers: "},{"text":"usually increases sanity but may cause distress.","bold":false}]','[{"text":"Flashlight: ","bold":true},{"text":"brightens areas places and signals military aircraft.","bold":false},{"text":"\\nGas Mask: "},{"text":"prevents radiation sickness.","bold":false},{"text":"\\nGun: "},{"text":"ranged weapon ideal for defence.","bold":false},{"text":"\\nHarmonica: "},{"text":"increases sanity and may prevent raids.","bold":false}]','[{"text":"Map: ","bold":true},{"text":"increases available locations, movement speed, and helps find the military.","bold":false},{"text":"\\nPadlock: ","bold":true},{"text":"prevents raids and allows the last survivor to host an expedition without losing the bunker.","bold":false},{"text":"\\nRadio: ","bold":true},{"text":"receives military broadcasts and improves sanity.","bold":false}]','[{"text":"Medkit: ","bold":true},{"text":"cures any sickness and makes expeditions safer.","bold":false},{"text":"\\nSoup Can: ","bold":true},{"text":"restores hunger for ten days, persistent feeding cures ailments.","bold":false},{"text":"\\nSuitcase: ","bold":true},{"text":"carries three items to the surface.","bold":false},{"text":"\\nWater Bottle: ","bold":true},{"text":"restores thirst for five days.","bold":false}]','[{"text":"Body Armour: ","bold":true},{"text":"protects against a bandit ambush while on expedition.","bold":false}]','[{"text":"2 Characters","bold":true},{"text":"\\nDolores McDoodle: ","bold":true},{"text":"is a sturdy mother of two who has learned to cope in the harshest conditions thanks to a mostly happy marriage.","bold":false},{"text":"\\n• Has a keen eye for items that reduce insanity.","bold":false},{"text":"\\n• Talks about destroying radios in her sleep.","bold":false}]','[{"text":"Ted McDoodle: ","bold":true},{"text":"is a father who believes himself to be a skilled salesman that has perfected the art of negotiating a deal. However, Dolores would beg to differ.","bold":false},{"text":"\\n• Resistant to hunger.","bold":false},{"text":"\\n• Terrible at directions.","bold":false},{"text":"\\n• Allergic to cats.","bold":false}]','[{"text":"Mary Jane McDoodle: ","bold":true},{"text":"is the eldest child who aspires to become a professional tuba player and often finds herself practising in private.","bold":false},{"text":"\\n• Adores food.","bold":false},{"text":"\\n• Allergic to radioactive waste... who knew?","bold":false},{"text":"\\n• Annoyed by checkers.","bold":false}]','[{"text":"Timothy McDoodle: ","bold":true},{"text":"is the youngest child. Besides drawing in inconvenient places, his immense passion for exploration has made him a proud member of the boy scouts.","bold":false},{"text":"\\n• Not afraid of the wilderness.","bold":false},{"text":"\\n• Competent in administering first-aid.","bold":false}]','[{"text":"3 Status Effects","bold":true},{"text":"\\nFatigue: ","bold":true},{"text":"occurs after spending more than twenty days in the bunker, reduces expedition item slots to one.","bold":false},{"text":"\\nHunger And Thirst: "},{"text":"Characters die if they do not eat for eleven days or drink for six days.","bold":false}]','[{"text":"Injuries: ","bold":true},{"text":"influenced by events and expeditions. Causes sickness if untreated for twenty-eight days.","bold":false},{"text":"\\nInsanity: "},{"text":"continuous exposure to upsetting events makes characters insane and makes them break items and flea within twenty to thirty-five days.","bold":false}]','[{"text":"Sickness: ","bold":true},{"text":"caused by radiation poisoning or malnutrition. Characters may die within fifteen to nineteen days. ","bold":false},{"text":"\\nTiredness: "},{"text":"Occurs after returning from expeditions and is cured with constant feeding.","bold":false}]','[{"text":"Mutation: ","bold":true},{"text":"exposure to radioactive waste may transform Mary Jane into a powerful mutant that requires double food but no water. She is guaranteed to scare away raiders but may eat family members while starving and cannot carry items.","bold":false}]','[{"text":"4 Journal/Chest","bold":true},{"text":"\\nThe centre of the bunker has a chest menu that manages feeding and healing, expeditions, and events. Remember that only one player may use it, and you must confirm choices to start a new day and receive another part of the story.","bold":false}]','[{"text":"5 Expeditions","bold":true},{"text":"\\nExpeditions allow you to restock supplies and meet military personnel. Only one trip is possible at a time. Equipping items improves survival and loot. Frequent trips may attract raiders. Fallout is potentially fatal without a gas mask.","bold":false}]','[{"text":"6 Restart Scavenge","bold":true,"clickEvent":{"action":"run_command","value":"/execute as @p[team=Playing] run function mc:timers/scavenge/restart_test"}},{"text":"\\nClick the button below to reattempt scavenging using the same game mode; this will not work after reaching the lobby or bunker.","color":"dark_red","bold":false},{"text":"\\n\\nClick to restart","color":"dark_blue","bold":false,"underlined":true}]','[{"text":"7 Exit To Lobby","bold":true},{"text":"\\nClick the button below to lose all progress and return to the lobby for another round.","color":"dark_red","bold":false},{"text":"\\n\\nClick to exit","color":"dark_blue","bold":false,"underlined":true,"clickEvent":{"action":"run_command","value":"/function mc:quit/manage_refresh"}}]']} 1